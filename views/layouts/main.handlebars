    setTimeout(() => {
            // Seleciona todos os alertas
            const alerts = document.querySelectorAll('.alert');
            
            // Remove cada alerta após 5 segundos
            alerts.forEach(alert => {
                alert.classList.add('fade-out');
                setTimeout(() => {
                    alert.remove();
                }, 1000); // Remove o alerta após 1 segundo (tempo de fade-out)
